{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Delete Rate 1 (Dry Run + Verbose)",
            "type": "debugpy",
            "request": "launch",
            "module": "src.delete_rate_1",
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "args": [
                "--target", "~/Desktop/raw_temp",
                "--dry_run",
                "--verbose"
            ]
        }
    ]
}
